{% extends 'base.html.twig' %}

{% block title %}Locatie index{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">


    <style>
        body {
            font-size: 18px;
            font-family: Roboto, serif;
            margin-left: 10%;
            margin-right: 10%;
            overflow-x: hidden;
            background-color: lightgrey;
        }

        .title {
            text-align: center;
            background-image: url("../dif_building.png");
            font-weight: bold;
            font-size: 80px;
            padding: 100px;
            color: white;
            margin-top: -50px;
            margin-left: -15%;
            margin-right: -15%;
            margin-bottom: 50px;
        }

        a:link, a:visited {
            color: black;
            border: 2px solid darkgrey;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        a:hover, a:active {
            background-color: darkgrey;
            color: white;
            -webkit-transition: color .2s linear;
            -moz-transition: color .2s linear;
            -ms-transition: color .2s linear;
            -o-transition: color .2s linear;
            transition: color .2s linear;
        }

        a {
            width: 100%;
            height: 50px;
            margin-top: 5px;
            margin-bottom: 5px;
            border-radius: 8px;
            text-align: center;
        }

        table, th, td {
            border: 1px solid darkgrey;
        }




    </style>

    <h1 class="title">Locaties toevoegen, wijzigen en verwijderen</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Locatie</th>
                <th>Beschrijving</th>
                <th>Email</th>
                <th>Telenr</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for locatie in locaties %}
            <tr>
                <td>{{ locatie.id }}</td>
                <td>{{ locatie.locatie }}</td>
                <td>{{ locatie.beschrijving }}</td>
                <td>{{ locatie.email }}</td>
                <td>{{ locatie.telenr }}</td>
                <td>
                    <a href="{{ path('app_locatie_show', {'id': locatie.id}) }}">show</a>
                    <a href="{{ path('app_locatie_edit', {'id': locatie.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="createNew" href="{{ path('app_locatie_new') }}">Create new</a>
{% endblock %}
